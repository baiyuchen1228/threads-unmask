{
  "manifest_version": 3,
  "name": "Threads Unmask",
  "version": "1.0.1",
  "description": "Automatically unmasks sensitive content on Threads, allowing you to view it directly.",
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.net/*",
        "https://www.threads.com/*"
      ],
      "css": ["unmask.css"],
      "js": ["core.js"],
      "run_at": "document_start"
    }
  ]
}
